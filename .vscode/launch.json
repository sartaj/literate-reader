// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "literate-reader",
            "runtimeExecutable": "${workspaceFolder}/literate-reader/node_modules/.bin/nodemon",
            "cwd": "${workspaceFolder}/literate-reader",
            "program": "${workspaceFolder}/literate-reader/specifications/index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "literate-reader-vscode",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "protocol": "legacy",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/literate-reader-vscode"
            ]
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        }
    ]
}